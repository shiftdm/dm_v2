
    # -------------------------
# 1️⃣ Base image
# -------------------------
FROM node:20-slim

# -------------------------
# 2️⃣ Install Chrome dependencies & fix SSL issues
# -------------------------
RUN apt-get update && apt-get install -y \
    wget \
    gnupg \
    ca-certificates \
    chromium \
    chromium-sandbox \
    fonts-liberation \
    libatk-bridge2.0-0 \
    libnss3 \
    libxss1 \
    libasound2 \
    libatk1.0-0 \
    libgtk-3-0 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    xdg-utils \
    && update-ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# -------------------------
# 3️⃣ Set working directory
# -------------------------
WORKDIR /app

# -------------------------
# 4️⃣ Copy package files and install dependencies
# -------------------------
COPY package*.json pnpm-lock.yaml* ./
RUN npm install -g pnpm && pnpm install --frozen-lockfile

# -------------------------
# 5️⃣ Install Chrome for Puppeteer
# -------------------------
RUN npx puppeteer browsers install chrome

# -------------------------
# 6️⃣ Copy all project files
# -------------------------
COPY . .

# -------------------------
# 7️⃣ Puppeteer environment configuration
# -------------------------
ENV PUPPETEER_EXECUTABLE_PATH=/root/.cache/puppeteer/chrome/linux-142.0.7444.61/chrome-linux64/chrome \
    PUPPETEER_SKIP_DOWNLOAD=true \
    NODE_ENV=production

# -------------------------
# 8️⃣ Expose API port
# -------------------------
EXPOSE 3001

# -------------------------
# 9️⃣ Launch server
# -------------------------
CMD ["pnpm", "start"]
